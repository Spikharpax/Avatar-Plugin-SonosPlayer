' create speaker

hSpeaker = Null
Set hSpeaker = CreateObject("SAPI.SpVoice")

' get voices

list = "Gender;Age;Name;Language;Vendor"
For Each strVoice in hSpeaker.GetVoices
	if ((InStr(1, strVoice.GetAttribute("Name"), "ScanSoft Virginie_Dri40_16kHz") = 0) And  (InStr(1, strVoice.GetAttribute("Name"), "ScanSoft Sebastien_Full_22kHz") = 0)) then	
		list = list & vbLf & strVoice.GetAttribute("Gender") & ";" & strVoice.GetAttribute("Age") & ";" & strVoice.GetAttribute("Name") & ";" & strVoice.GetAttribute("Language") & ";" & strVoice.GetAttribute("Vendor")
	else
		list = list & vbLf & strVoice.GetAttribute("Gender") & ";Adult;" & strVoice.GetAttribute("Name") & ";" & strVoice.GetAttribute("Language") & ";" & strVoice.GetAttribute("Vendor")
	end if
Next

' close speaker

Set hSpeaker = Nothing
hSpeaker = Null

WScript.StdOut.WriteLine(list)
WScript.Quit (0)
